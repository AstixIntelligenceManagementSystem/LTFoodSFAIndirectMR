<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical" >
    
      <ImageView
            android:id="@+id/mainImg"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:background="@drawable/banner1"
            android:layout_below="@+id/bardd"
            />
    <Button
        android:id="@+id/mainImg1"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:background="@drawable/alert_text_background"
        android:textColor="#000000"
        android:gravity="left|center_vertical"
        android:drawableRight="@drawable/ic_right2"
        android:textSize="14sp"
        android:text="Home" />
    <Button
        android:id="@+id/but_dashboard"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:background="@drawable/alert_text_background"
        android:textColor="#000000"
        android:gravity="left|center_vertical"
        android:drawableRight="@drawable/ic_right2"
        android:textSize="14sp"
        android:text="Dashboard" />

         
        
        
        <Button android:id="@+id/butn_refresh_data"
          android:layout_width="220dp"
     android:layout_height="wrap_content"
        android:background="@drawable/alert_text_background"
         android:textColor="#000000"
     android:text="Refresh Data"
	 android:gravity="left|center_vertical"
         android:drawableRight="@drawable/ic_right2"
           android:textSize="14sp"/>

      <Button
     android:id="@+id/changeRoute"
      android:layout_width="220dp"
     android:layout_height="wrap_content"
       android:background="@drawable/alert_text_background"
         android:textColor="#000000"
        android:gravity="left|center_vertical"
         android:drawableRight="@drawable/ic_right2"
           android:textSize="14sp"
          android:visibility="gone"
     android:text="Change Route"
   
      />

     <Button
        android:id="@+id/btnSalesSummary"
       android:layout_width="220dp"
     android:layout_height="wrap_content"
       android:background="@drawable/alert_text_background"
         android:textColor="#000000"
        android:gravity="left|center_vertical"
         android:drawableRight="@drawable/ic_right2"
           android:textSize="14sp"
        android:text="Summary" />

    <Button
        android:id="@+id/btnTargetVsAchieved"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:background="@drawable/alert_text_background"
        android:textColor="#000000"
        android:gravity="left|center_vertical"
        android:drawableRight="@drawable/ic_right2"
        android:textSize="14sp"
        android:text="Target Vs Achieved" />
     
       <Button
        android:id="@+id/btnewAddedStore"
       android:layout_width="220dp"
     android:layout_height="wrap_content"
       android:background="@drawable/alert_text_background"
         android:textColor="#000000"
        android:gravity="left|center_vertical"
         android:drawableRight="@drawable/ic_right2"
           android:textSize="14sp"
           android:visibility="gone"
        android:text="View New Added Store" />

    <Button
        android:id="@+id/butn_summary_report"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:background="@drawable/alert_text_background"
        android:textColor="#000000"
        android:gravity="left|center_vertical"
        android:drawableRight="@drawable/ic_right2"
        android:textSize="14sp"
        android:text="Outlet Census Report" />

    <Button
        android:id="@+id/but_pickDetails"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:background="@drawable/alert_text_background"
        android:textColor="#000000"
        android:gravity="left|center_vertical"
        android:drawableRight="@drawable/ic_right2"
        android:textSize="14sp"
        android:text="Picked Details" />

       <Button
        android:id="@+id/btnCheckTodayOrder"
       android:layout_width="220dp"
     android:layout_height="wrap_content"
       android:background="@drawable/alert_text_background"
         android:textColor="#000000"
        android:gravity="left|center_vertical"
         android:drawableRight="@drawable/ic_right2"
           android:textSize="14sp"
           android:visibility="gone"
        android:text="Check Today Order" />

    <Button
        android:id="@+id/btnVersion"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:background="@drawable/alert_text_background"
        android:textColor="#000000"
        android:gravity="left|center_vertical"
        android:drawableRight="@drawable/ic_right2"
        android:textSize="14sp"
        android:text="" />

</LinearLayout>
