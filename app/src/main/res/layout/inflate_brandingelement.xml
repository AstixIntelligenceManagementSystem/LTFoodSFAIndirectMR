<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:paddingBottom="10dp"
    android:background="@drawable/shadow_with_5dp"
    android:orientation="vertical" >
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ll_hdr"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#F36F24"
        android:orientation="horizontal">
        
        <TextView 
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text=""
            android:textSize="16sp"
            android:padding="5dp"
            android:textColor="#FFFFFF"
            android:layout_height="wrap_content"
            android:id="@+id/text_header"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/expand_arrow"
            android:layout_marginLeft="3dp"
            android:id="@+id/img_Openlayout"/>
        
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="4dp"
        android:id="@+id/ll_BrandData"
        android:background="@drawable/border_brandelement"
        android:visibility="gone"
        android:orientation="vertical">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Click Pic"
            android:visibility="visible"
            android:id="@+id/btn_clickPic"
            android:background="@drawable/shadow_5dp_oreng"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            android:textSize="14sp"
            />

        <project.astix.com.ltfoodsfaindirectMR.ExpandableHeightGridView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="2dp"
            android:visibility="visible"
            android:layout_marginTop="2dp"
            android:numColumns="3"
            android:id="@+id/expnd_GridView">

        </project.astix.com.ltfoodsfaindirectMR.ExpandableHeightGridView>



    </LinearLayout>
     


</LinearLayout>
