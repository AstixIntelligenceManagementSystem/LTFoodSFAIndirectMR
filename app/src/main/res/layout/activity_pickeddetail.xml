<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="project.astix.com.ltfoodsfaindirectMR.WareHouse_Stock">

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="@drawable/custom_header"
        android:id="@+id/ll_header"
        android:layout_alignParentTop="true">

        <ImageView
            android:id="@+id/backbutton"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginTop="6dp"
            android:src="@drawable/ic_back"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:shadowRadius="7"
            android:shadowDy="4"
            android:shadowDx="4"
            android:textStyle="bold"
            android:shadowColor="#80FFFFFF"
            android:textSize="18sp"
            android:text="Picked Details"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginTop="6dp"
            android:visibility="invisible"
            android:src="@drawable/ic_back"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/StoreSelectionParents"
        android:layout_marginTop="10dp"

        >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Store Name"
            android:layout_weight="0.5"
            android:layout_marginTop="1dp"
            android:textStyle="bold"
            android:textColor="#000"
            android:id="@+id/textView" />

        <Spinner
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="3dp"
            android:layout_marginRight="5dp"
            android:id="@+id/spinner_for_filter"
            android:visibility="visible"
            android:background="@drawable/spinner_distribtr_bckgrnd"
            />

    </LinearLayout>


    <LinearLayout
       android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/ll_header"
        android:layout_marginTop="10dp"
        android:paddingTop="4dp"
        android:id="@+id/ll_headings"
        android:visibility="gone"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/bckgrnd_header"
            android:textColor="#FFFFFF"
            android:layout_weight="3"
            android:text="Product name"
            android:layout_margin="1dp"
            android:gravity="center"
            android:textSize="15sp"
            android:padding="3dp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/bckgrnd_header"
            android:textColor="#FFFFFF"
            android:layout_weight="2"
            android:text="To Pick"
            android:layout_margin="1dp"
            android:gravity="center"
            android:textSize="15sp"
            android:padding="3dp"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/ll_parentLayoutForPrdcts">

    </LinearLayout>

    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:visibility="gone">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#2e8b57"
            android:textColor="#FFFFFF"
            android:text="Category Shelf"
            android:textSize="13sp"
            android:gravity="center_vertical"
            android:paddingLeft="30dp"/>


    </LinearLayout>
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:visibility="gone"
        android:layout_gravity="center_horizontal"
        xmlns:android="http://schemas.android.com/apk/res/android">

        <TableRow>
            <TextView
                android:layout_marginTop="10dp"
                android:text="Daawat Biryani Rice 1kg"
                android:textSize="13sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_column="1"
                android:textStyle="bold"/>
            <TextView
                android:text="10"
                android:layout_marginTop="10dp"
                android:textSize="13sp"
                android:layout_marginLeft="130dp"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:textStyle="bold"/>
        </TableRow>
        <TableRow>
            <TextView
                android:layout_marginTop="10dp"
                android:text="Daawat Brown Rice 1kg"
                android:textSize="13sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_column="1"
                android:textStyle="bold"/>
            <TextView
                android:text="06"
                android:layout_marginTop="10dp"
                android:textSize="13sp"
                android:layout_marginLeft="130dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:textStyle="bold"/>
        </TableRow>
    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:visibility="gone"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#2e8b57"
            android:textColor="#FFFFFF"
            android:text="Floor Stack 1"
            android:textSize="13sp"
            android:gravity="center_vertical"
            android:paddingLeft="30dp"/>


    </LinearLayout>
    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        xmlns:android="http://schemas.android.com/apk/res/android">

        <TableRow>
            <TextView
                android:layout_marginTop="10dp"
                android:text="Daawat Pulav Rice 1kg"
                android:textSize="13sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"/>
            <TextView
                android:text="12"
                android:layout_marginTop="10dp"
                android:textSize="13sp"
                android:layout_marginLeft="130dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:textStyle="bold"/>
        </TableRow>
        <TableRow>
            <TextView
                android:layout_marginTop="10dp"
                android:text="Daawat Super Rice 1kg"
                android:textSize="13sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_marginLeft="130dp"
                android:layout_marginTop="10dp"
                android:text="20"
                android:textSize="13sp"
                android:textStyle="bold" />
        </TableRow>
    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:visibility="gone">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#2e8b57"
            android:textColor="#FFFFFF"
            android:text="Floor Stack 2"
            android:textSize="13sp"
            android:gravity="center_vertical"
            android:paddingLeft="30dp"/>


    </LinearLayout>
    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:visibility="gone"
        xmlns:android="http://schemas.android.com/apk/res/android">

        <TableRow>
            <TextView
                android:layout_marginTop="10dp"
                android:text="Daawat Traditional Basmati 5 kg"
                android:textSize="13sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"/>
            <TextView
                android:text="21"
                android:layout_marginTop="10dp"
                android:textSize="13sp"
                android:layout_marginLeft="80dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:textStyle="bold"/>
        </TableRow>
        <TableRow>
            <TextView
                android:layout_marginTop="10dp"
                android:text="Elina Long Grain Rice 5 kg"
                android:textSize="13sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"/>
            <TextView
                android:text="17"
                android:layout_marginTop="10dp"
                android:textSize="13sp"
                android:layout_marginLeft="80dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"

                android:textStyle="bold"/>
        </TableRow>
    </TableLayout>

</LinearLayout>
